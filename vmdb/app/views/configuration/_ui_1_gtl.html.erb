<ul id="toolbars" class="list-inline">
<% if resource == :compare %>
	<% if view == "compressed" %>
		<li>
			<%= link_to "Expanded View",
                            {:action=>"view_selected", :resource=>:compare, :view=>"expanded"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Expanded View") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/view_compressed.png", :border=>"0", :alt=>"Compressed View", :title=>"Compressed View") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/view_expanded.png", :border=>"0", :alt=>"Expanded View", :title=>"Expanded View") %>
		</li>
		<li>
			<%= link_to "Compressed View", 
                            {:action=>"view_selected", :resource=>:compare, :view=>"compressed"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Compressed View") %>
		</li>
	<% end %>
<% elsif resource == :compare_mode %>
	<% if view == "exists" %>
		<li>
			<%= link_to "Details View", 
                            {:action=>"view_selected", :resource=>:compare_mode, :view=>"details"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Details Mode") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/exists.png", :border=>"0", :alt=>"Exists Mode", :title=>"Exists Mode") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/view_list.png", :border=>"0", :alt=>"Details Mode", :title=>"Details Mode") %>
		</li>
		<li>
			<%= link_to "Exists Mode",
                            {:action=>"view_selected", :resource=>:compare_mode, :view=>"exists"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Exists Mode") %>
		</li>
	<% end %>
<% elsif resource == :drift %>
	<% if view == "compressed" %>
		<li>
			<%= link_to "Expanded View", 
                            {:action=>"view_selected", :resource=>:drift, :view=>"expanded"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Expanded View") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/view_compressed.png", :border=>"0", :alt=>"Compressed View", :title=>"Compressed View") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/view_expanded.png", :border=>"0", :alt=>"Expanded View", :title=>"Expanded View") %>
		</li>
		<li>
			<%= link_to "Compressed View", 
                            {:action=>"view_selected", :resource=>:drift, :view=>"compressed"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Compressed View") %>
		</li>
	<% end %>
<% elsif resource == :drift_mode %>
	<% if view == "exists" %>
		<li>
			<%= link_to "Details Mode", 
                            {:action=>"view_selected", :resource=>:drift_mode, :view=>"details"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Details Mode") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/exists.png", :border=>"0", :alt=>"Exists Mode", :title=>"Exists Mode") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/view_list.png", :border=>"0", :alt=>"Details Mode", :title=>"Details Mode") %>
		</li>
		<li>
			<%= link_to "Exists Mode", 
                            {:action=>"view_selected", :resource=>:drift_mode, :view=>"exists"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Exists Mode") %>
		</li>
	<% end %>
<% elsif resource == :dashboards %>
	<% if view == "textual" %>
		<li>
			<%= link_to "Graphical View", 
                            {:action=>"view_selected", :resource=>:dashboards, :view=>"graphical"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Graphical View") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/view_textual.png", :border=>"0",
										:alt=>"Text View", :title=>"Text View") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/view_graphical.png", :border=>"0",
										:alt=>"Graphical View",	:title=>"Graphical View") %>
		</li>
		<li>
			<%= link_to "Text View", 
                              {:action=>"view_selected", :resource=>:dashboards, :view=>"textual"},
			      :class=>"btn btn-defualt",
                              :remote=>true,
                              :title=>"Text View") %>
		</li>
	<% end %>
<% elsif resource == :treesize %>
	<% if view.to_i == 20 %>
		<li>
			<%= link_to "Large Trees", 
                            {:action=>"view_selected", :resource=>:treesize, :view=>"32"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Large Trees") %>
		</li>
		<li class="active">
			<%= image_tag("/images/toolbars/tree-small.png", :border=>"0", :alt=>"Small Trees", :title=>"Small Trees") %>
		</li>
	<% else %>
		<li class="active">
			<%= image_tag("/images/toolbars/tree-large.png", :border=>"0", :alt=>"Large Trees", :title=>"Large Trees") %>
		</li>
		<li>
			<%= link_to "Small Trees", 
                            {:action=>"view_selected", :resource=>:treesize, :view=>"20"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Small Trees") %>
		</li>
	<% end %>
<% else %>
	<% if view == "grid" %>
    <% if resource != :catalog %>
      <li class="active">
        <%= image_tag("/images/toolbars/view_grid.png", :border=>"0", :alt=>"Grid View", :title=>"Grid View") %>
      </li>
    <% end %>
		<li>
		  <%= link_to "Tile View", 
                          {:action=>"view_selected", :resource=>resource, :view=>"tile"},
			  :class=>"btn btn-default",
                          :remote=>true,
                          :title=>"Tile View") %>
    </li>
		<li>
		  <%= link_to "List View",
                          {:action=>"view_selected", :resource=>resource, :view=>"list"},
			  :class=>"btn btn-default",
                          :remote=>true,
                          :title=>"List View") %>
    </li>

	<% elsif view == "tile" %>
    <% if resource != :catalog %>
      <li>
        <%= link_to "Grid View", 
                            {:action=>"view_selected", :resource=>resource, :view=>"grid"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Grid View") %>
      </li>
    <% end %>
		<li class="active">
		  <%= image_tag("/images/toolbars/view_tile.png", :border=>"0", :alt=>"Tile View", :title=>"Tile View") %>
    </li>
		<li>
		  <%= link_to "List View", 
                          {:action=>"view_selected", :resource=>resource, :view=>"list"},
			  :class=>"btn btn-default",
                          :remote=>true,
                          :title=>"List View") %></li>

	<% else %>
    <% if resource != :catalog %>
      <li>
        <%= link_to "Grid View", 
                            {:action=>"view_selected", :resource=>resource, :view=>"grid"},
			    :class=>"btn btn-default",
                            :remote=>true,
                            :title=>"Grid View") %>
      </li>
    <% end %>
		<li>
		  <%= link_to "Tile View", 
                          {:action=>"view_selected", :resource=>resource, :view=>"tile"},
			  :class=>"btn btn-default",
                          :remote=>true,
                          :title=>"Tile View") %>
    </li>
		<li class="active">
		  <%= image_tag("/images/toolbars/view_list.png", :border=>"0", :alt=>"List View", :title=>"List View") %>
    </li>
	<% end %>
<% end %>
</ul>
