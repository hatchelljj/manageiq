<% url = url_for(:action=>'timeprofile_field_changed') %>
<div id="timeprofile_days_hours_div">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>Days</td>
        <td>
          <table class="table table-striped">
            <tr>
              <td style="width:50px" class="text-center">(All)</td>
              <td style="width:50px" class="text-center">Sunday</td>
              <td style="width:50px" class="text-center">Monday</td>
              <td style="width:50px" class="text-center">Tuesday</td>
              <td style="width:50px" class="text-center">Wednesday</td>
              <td style="width:50px" class="text-center">Thursday</td>
              <td style="width:50px" class="text-center">Friday</td>
              <td style="width:50px" class="text-center">Saturday</td>
            </tr>
            <tr>
              <td class="text-center">
                <%= check_box_tag("all_days", value="1",
                                    checked=@edit[:all_days],
                                    :disabled => disabled,
                                    "data-miq_sparkle_on"=>true, "data-miq_sparkle_off"=>true,
                                    "data-miq_observe_checkbox"=>{:url=>url}.to_json) %>
              </td>
              <% 7.times do |i| %>
                <td class="text-center">
                  <%= check_box_tag("days_#{i}", value="1",
                                    checked=@edit[:new][:profile][:days].include?(i),
                                    :disabled => disabled,
                                    "data-miq_observe_checkbox"=>{:url=>url}.to_json) %>
                </td>
              <% end %>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td>Hours</td>
        <td>
          <table class="table table-striped">
            <tr>
              <td style="width:50px" class="text-center">(All)</td>
              <td style="width:35px" class="text-center"><b>AM:</b></td>
              <td style="width:35px" class="text-center">12-1</td>
              <td style="width:35px" class="text-center">1-2</td>
              <td style="width:35px" class="text-center">2-3</td>
              <td style="width:35px" class="text-center">3-4</td>
              <td style="width:35px" class="text-center">4-5</td>
              <td style="width:35px" class="text-center">5-6</td>
              <td style="width:35px" class="text-center">6-7</td>
              <td style="width:35px" class="text-center">7-8</td>
              <td style="width:35px" class="text-center">8-9</td>
              <td style="width:35px" class="text-center">9-10</td>
              <td style="width:35px" class="text-center">10-11</td>
              <td width="35" class="text-center">11-12</td>
            </tr>
            <tr>
              <td class="text-center">
                <%= check_box_tag("all_hours", value="1",
                                    checked=@edit[:all_hours],
                                    :disabled => disabled,
                                    "data-miq_sparkle_on"=>true, "data-miq_sparkle_off"=>true,
                                    "data-miq_observe_checkbox"=>{:url=>url}.to_json) %>
              </td>
              <td>&nbsp;</td>
              <% 12.times do |i| %>
                <td class="text-center">
                  <%= check_box_tag("hours_#{i}", value="1",
                                    checked=@edit[:new][:profile][:hours].include?(i),
                                    :disabled => disabled,
                                    "data-miq_observe_checkbox"=>{:url=>url}.to_json) %>
                </td>
              <% end %>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td class="text-center"><b>PM:</b></td>
              <td class="text-center">12-1</td>
              <td class="text-center">1-2</td>
              <td class="text-center">2-3</td>
              <td class="text-center">3-4</td>
              <td class="text-center">4-5</td>
              <td class="text-center">5-6</td>
              <td class="text-center">6-7</td>
              <td class="text-center">7-8</td>
              <td class="text-center">8-9</td>
              <td class="text-center">9-10</td>
              <td class="text-center">10-11</td>
              <td class="text-center">11-12</td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <% 12.times do |i| %>
              <% i+=12 %>
                <td class="text-center">
                  <%= check_box_tag("hours_#{i}", value="1",
                                    checked=@edit[:new][:profile][:hours].include?(i),
                                    :disabled => disabled,
                                    "data-miq_observe_checkbox"=>{:url=>url}.to_json) %>
                </td>
              <% end %>
            </tr>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
  <%# Need this to bind checkbox observers when under DHTMLX tabs %>
  <%# TODO: Remove when DHTMLX tabs are converted to jQuery tabs  %>
  <script>miqObserveCheckboxes();</script>
</div>
