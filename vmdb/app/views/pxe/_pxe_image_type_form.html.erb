<% url = url_for(:action => 'pxe_image_type_form_field_changed', 
                 :id     => "#{@pxe_image_type.id || "new"}") 
%>
<div id="form_div">
  <%= render :partial => "layouts/flash_msg" %>
  <p class="lead">Basic Information</p>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td >Name</td>
        <td >
          <%= text_field_tag("name",
                             @edit[:new][:name],
                             :maxlength         => MAX_NAME_LEN,
                             "data-miq_observe" => {:interval => '.5', 
                                                    :url      => url}.to_json) 
          %>
          <%= javascript_tag("$j('#name').focus()") %>
        </td>
      </tr>
      <tr>
        <td >Type</td>
        <td >
          <%= select_tag("provision_type",
                         options_for_select([["<Any>",nil]] + @edit[:prov_types].invert.sort,
                         @edit[:new][:provision_type]),
                         "data-miq_observe" => {:url => url}.to_json)
          %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
