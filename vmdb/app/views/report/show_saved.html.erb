<div id='main_div'>
<% if @report == nil %>
  <div class="bg-warning">
    <span class="glyphicon glyphicon-info-sign"></span>
    <strong>Choose a Report from the menus on the left.</strong>
  </div>
<% else  %>
  <fieldset>
    <p class="lead"><%= @report.name %></p>
    <%= render :partial => "layouts/flash_msg" %>
    <%= render :partial => "shared/report_chart_and_html", :locals => { :html => @html, :chart => @zgraph, :report => @report } %>
  </fieldset>
<% end  %>
</div>
